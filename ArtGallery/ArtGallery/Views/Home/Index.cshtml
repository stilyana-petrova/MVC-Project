@{
    ViewData["Title"] = "Home Page";
}

<!--Slideshow-->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3500">
    <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/brown-welcome-banner.png" alt="Welcome">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/bannerDecor.png" alt="Decorations">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/bannerPaintings.png" alt="Paintings">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/bannerCustomers.png" alt="Customers">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/bannerShopping.png" alt="Enjoy Shopping">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
</div>



<!--Shows popular categories-->
<div id="categ">
    <div class="pt-5 pb-5">
        <h1 class="h1 text-center">Our popular categories</h1>
    </div>
    <div class="row justify-content-center mt-5">
        <!-- Each category container -->
        <div class="col-md-3 d-flex flex-column align-items-center mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center">
                <div class="image">
                    <a asp-controller="Product" asp-action="Index">
                        <img src="/images/Done/decorations/dec-1-resize.jpg" class="img-fluid" />
                    </a>
                </div>
                <h4><a asp-controller="Product" asp-action="Deco">Decorations</a></h4>
            </div>
        </div>

        <div class="col-md-3 d-flex flex-column align-items-center mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center">
                <div class="image">
                    <a asp-controller="Product" asp-action="Paintings">
                        <img src="/images/Done/paintings/paint-6.jpg" class="img-fluid" />
                    </a>
                </div>
                <h4><a asp-controller="Product" asp-action="Paintings">Paintings</a></h4>
            </div>
        </div>

        <div class="col-md-3 d-flex flex-column align-items-center mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center">
                <div class="image">
                    <a asp-controller="Product" asp-action="Calendars">
                        <img src="/images/Done/calendars/cal-1.jpg" class="img-fluid" />
                    </a>
                </div>
                <h4><a asp-controller="Product" asp-action="Calendars">Calendars</a></h4>
            </div>
        </div>

        <div class="col-md-3 d-flex flex-column align-items-center mb-5" data-aos="zoom-in" data-aos-delay="300">
            <div class="text-center">
                <div class="image">
                    <a asp-controller="Product" asp-action="Keys">
                        <img src="~/images/Done/keyhouse/key-2.jpg" class="img-fluid" />
                    </a>
                </div>
                <h4><a asp-controller="Product" asp-action="Keys">Key houses</a></h4>
            </div>
        </div>
    </div>
</div>